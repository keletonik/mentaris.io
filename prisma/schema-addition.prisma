// Whitepaper download email capture
// Tracks who downloaded what and whether they opted in
model WhitepaperDownload {
  id             String   @id @default(cuid())
  email          String   @unique
  firstName      String?
  subscribe      Boolean  @default(true)
  downloadCount  Int      @default(1)
  lastDownloadAt DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("whitepaper_downloads")
}

