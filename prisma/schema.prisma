generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/mentaris_website/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  service   String?
  message   String
  status    String   @default("new") // new, contacted, resolved
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([status])
}

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String
  content     String
  author      String
  authorRole  String
  category    String
  tags        String[]
  imageUrl    String
  readTime    Int      // in minutes
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([published])
}

model CaseStudy {
  id          String   @id @default(cuid())
  slug        String   @unique
  clientName  String
  industry    String
  service     String
  challenge   String
  solution    String
  results     String
  testimonial String?
  imageUrl    String
  metrics     String[] // JSON array of metric objects
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([industry])
  @@index([service])
  @@index([published])
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  bio         String
  imageUrl    String
  order       Int      @default(0)
  linkedin    String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}
